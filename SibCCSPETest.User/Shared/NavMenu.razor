@rendermode InteractiveServer
@inject NavigationManager NavManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SibCCSPETest</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Пройти тест
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Результат
            </NavLink>
        </div>


        <div class="nav-item px-3">
            <button class="btn btn-primary" @onclick=@(() => OpenApp(""))>Main page</button>
        </div>
    </nav>
</div>

@code {
    void OpenApp(string url)
    {
        NavManager.NavigateTo($"/{url}");
    }
}


